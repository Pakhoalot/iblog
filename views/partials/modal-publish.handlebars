<div id="modal-frame" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h4 id="modal-message"></h4>
                {{!-- modal for publish --}}
                <div class="label-frame publish clearfix">
                    <form id="sumbit-article" action="javascript:;" method="POST" role="form">

                        <div class="form-group">
                            <label for="label-input inline-block">Labels</label>
                            <input type="text" value="{{post.Labels}}" name="label-input" id="input-labels" class="form-control" placeholder="each label split by ' ', example:apple bannas chock"
                                title="">
                            <p></p>
                            <label for="category-input inline-block">Category</label>
                            <input type="text" name="category-input" id="input-category" class="form-control" value=""
                                placeholder="category name, default 'other'" title="">
                            <p></p>
                        </div>
                        <div class="text-center">
                            <button type="button" class="btn btn-lg btn-default btn-simple" data-dismiss="modal">Close</button>
                            <button id="submit-btn" type="submit" class="btn btn-lg btn-default btn-simple">Publish</button>
                        </div>
                    </form>

                </div>
                
            </div>


        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->